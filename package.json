{
  "name": "pm-mono-repo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/admin",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --names \"web,admin\" -c \"cyan,magenta\" \"npm run web:dev\" \"npm run admin:dev\"",
    "build": "npm run types:build && npm run admin:build && npm run web:build",
    "lint": "npm run web:lint && npm run admin:lint",
    "clean": "rm -rf node_modules .turbo apps/*/node_modules apps/*/.next packages/*/node_modules packages/*/dist",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web:dev": "cd apps/web && npm run dev",
    "web:build": "cd apps/web && npm run build",
    "web:lint": "cd apps/web && npm run lint",
    "admin:dev": "npm -w apps/admin run start:dev",
    "admin:build": "npm -w apps/admin run build",
    "admin:lint": "npm -w apps/admin run lint",
    "types:build": "npm -w packages/shared-types run build",
    "install:all": "npm install && cd apps/web && npm install",
    "postinstall": "npm run types:build || true"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.1.0",
    "turbo": "^2.3.0"
  },
  "overrides": {
    "@tiptap/core": "2.1.16",
    "@tiptap/pm": "2.1.16",
    "@tiptap/extension-horizontal-rule": "2.1.16",
    "@tiptap/extension-document": "2.1.16",
    "@tiptap/extension-paragraph": "2.1.16",
    "@tiptap/extension-text": "2.1.16"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18"
  }
}
